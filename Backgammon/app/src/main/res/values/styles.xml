<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#A9B7C6</item>
        <item name="colorPrimaryDark">#2B2B2B</item>
        <item name="colorAccent">#CB772F</item>
        <item name="android:textColor">#A9B7C6</item>
        <item name="android:editTextColor">#A9B7C6</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:colorButtonNormal">#323232</item>
        <item name="android:colorBackground">#2B2B2B</item>
        <item name="android:background">#2B2B2B</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.StartPage">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="AppTheme.SettingsPage">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
